%h1
  %i.icon-tags
  Listing Tags

%br

%table
  %tr
    %th Name
    %th
    %th
    %th

  - @tags.each do |tag|
    %tr
      %td= tag.name
      %td
        = link_to tag, class: "btn btn-small btn" do
          %i.icon-eye-open
          Show
      %td
        = link_to edit_tag_path(tag), class: "btn btn-small btn" do
          %i.icon-pencil
          Edit
      %td
        = link_to tag, class: "btn btn-small btn", :confirm => 'Are you sure?', :method => :delete do
          %i.icon-remove
          Destroy
%br

= link_to new_tag_path, class: "btn btn-small btn-success" do
  %i.icon-hand-up
  New Tag
