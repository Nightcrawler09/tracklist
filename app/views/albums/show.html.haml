%p#notice= notice

%p
  %b Title:
  = @album.title
%p
  %b Description:
  = @album.description
%p
  %b Tag:
  = @album.tags.map {|x| (link_to x.name,x)}.join(", ").html_safe
   
%p
  %b Author:
  = @album.author_id

= link_to 'Edit', edit_album_path(@album)
\|
= link_to 'Back', albums_path

%h1 Listing tracks

%table
  %tr
    %th Title
    %th Tag
    %th Author
    %th track_number
    %th Album
    %th
    %th
    %th

  - @album.tracks.each do |track|
    %tr
      %td= track.title
      %td= track.tag_id
      %td= link_to track.author.name, author_path(track.author)
      %td= track.tags.map {|x| (link_to x.name,x)}.join(", ").html_safe
      %td= link_to track.album.title, album_path(track.album)
      %td= link_to 'Show', track
      %td= link_to 'Edit', edit_track_path(track)
      %td= link_to 'Destroy', track, :confirm => 'Are you sure?', :method => :delete

= link_to 'New Track', new_track_path
