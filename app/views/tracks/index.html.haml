-content_for :search do
  = search_form_for @search, html: {class: 'navbar-search pull-right'} do |s|
    = s.text_field :title_cont, class: 'search-query', placeholder: "Search"

%h1 TRACKS

%br

%table
  %tr
    %th Title
    %th Tags
    %th Author
    %th track_number
    %th Album
    %th
    %th
    %th

  - @tracks.each do |track|
    %tr
      %td= track.title
      %td= tags_links(track)
      %td= link_to track.author.name, author_path(track.author)
      %td= track.track_number
      %td= link_to track.album.title, album_path(track.album)
      %td
        = link_to track, class: "btn btn-small btn" do
          %i.icon-eye-open
          Show
      %td
        = link_to edit_track_path(track), class: "btn btn-small btn" do
          %i.icon-pencil
          Edit
      %td
        = link_to track, class: "btn btn-small btn", :confirm => 'Are you sure?', :method => :delete do
          %i.icon-trash
          Destroy

%br

= link_to new_track_path, class: "btn btn-small btn-success" do
  %i.icon-plus
  New Track
