-content_for :search do
  = search_form_for @search, html: {class: 'navbar-search pull-right'} do |s|
    = s.text_field :name_cont, class: 'search-query', placeholder: "Search"

%h1 AUTHORS

%table
  %tr
    %th Name
    %th Description
    %th Tag
    %th
    %th
    %th

  - @authors.each do |author|
    %tr
      %td= author.name
      %td= author.description
      %td= tags_links(author)
      %td
        = link_to author, class: "btn btn-small btn" do
          %i.icon-eye-open
          Show
      %td
        = link_to edit_author_path(author), class: "btn btn-small btn" do
          %i.icon-pencil
          Edit
      %td
        = link_to author, class: "btn btn-small btn", :confirm => 'Are you sure?', :method => :delete do
          %i.icon-trash
          Destroy

%br

= link_to new_author_path, class: "btn btn-small btn-success" do
  %i.icon-hand-up
  New Author


